<li id="comment-<%= comment.id%>">
    <% if(locals.user && locals.user.id == comment.user.id) {%>
    <br>
    <a id="<%= comment.id%>" href="comments/destroy/<%= comment.id%>" class="delete-comment">X</a>
    <%}%>
    <p>
        <%= comment.content%>
    </p>
    <small> <%= comment.user.name %></small>
</li>